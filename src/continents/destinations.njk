---
layout: base.njk
pagination:
  data: collections.continents
  size: 30
  alias: continent
permalink: "/continents/{{ continent.data.slug }}/destinations/"
---

{% set sectionTitle = "Destinations" %}

{% set heroTitle = "Top Destinations in " + continent.data.title %}

{% set heroDescription =
  "Discover hand-picked luxury destinations across "
  + continent.data.title +
  ". From iconic cities to hidden elite escapes."
%}

{% include "blocks/continent-hero.njk" %}


<section class="max-w-1100 mt-70 mb-70 p-20">
  <h2>Destinations in {{ continent.data.title }}</h2>

  <div class="destination-grid mt-40 mb-40">
    {% for d in collections.destinations %}
      {% if d.data.continent == continent.data.slug %}
        <article class="destination-cards">
          <img 
             src="{{ d.data.image }}" 
             alt="{{ d.data.title }}"
             width="600"
             height="400"
             loading="lazy"             
          >
          <h3>{{ d.data.title }}</h3>
          <p>{{ d.data.excerpt }}</p>
          <a class="link" href="{{ d.url }}">Explore</a>
        </article>
      {% endif %}
    {% endfor %}
  </div>
</section>
