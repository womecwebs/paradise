---
layout: base.njk
pagination:
  data: collections.continents
  size: 30
  alias: continent
permalink: "/continents/{{ continent.data.slug }}/experiences/"
---

{% set heroTitle = "Luxury Experiences in " + continent.data.title %}

{% set heroDescription =
  "Curated high-end experiences across "
  + continent.data.title +
  " including private tours, yacht charters, and VIP adventures."
%}

{% include "blocks/continent-hero.njk" %}


<section class="max-w-1100 mt-70 mb-70 p-20">

  <h2>Experiences in {{ continent.data.title }}</h2>

  <div class="destination-grid mt-40 mb-40">

    {% for exp in collections.experiences %}
      {% if exp.data.continent == continent.data.slug %}

        <article class="destination-cards pt-20">
          <img 
             src="{{ exp.data.image }}" 
             alt="{{ exp.data.title }}"
             width="600"
             height="400"
             loading="lazy" 
          >            
          <h3>{{ exp.data.title }}</h3>
          <p>{{ exp.data.excerpt }}</p>
          <a href="{{ exp.url }}">View experience</a>
        </article>

      {% endif %}
    {% endfor %}

  </div>
</section>
